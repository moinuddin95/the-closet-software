{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "strict": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "noEmit": true,
    "outDir": "dist",
    "types": ["chrome", "vite/client"]
  },
  "include": ["src/**/*"]
}
