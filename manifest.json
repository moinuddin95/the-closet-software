{
  "manifest_version": 3,
  "name": "The Closet Software",
  "version": "1.0.0",
  "description": "Save products from e-commerce websites to your closet",
  "permissions": ["storage", "activeTab"],

  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*",
    "*://*.walmart.com/*",
    "*://*.target.com/*",
    "*://*.etsy.com/*",
    "*://*.aliexpress.com/*",
    "*://*.shopify.com/*",
    "*://*.bestbuy.com/*",
    "*://*.zalando.com/*",
    "*://*.asos.com/*",
    "*://*.nike.com/*",
    "*://*.adidas.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/*.css", "src/*.js", "assets/*.js", "assets/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
